<div class="container">

<%= render 'shared/errors', obj: @article %>
  <div class = "row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article) do |form| %>
        <div class="form-group row">
            <%= form.label :title , class: "col-2 col-form-label"%>
            <div class="col-10">
              <%= form.text_field :title , class: "form-control"%>
            </div>
        </div>
        
        <div class="form-group row">
          
            <%= form.label :description , class: "col-2 col-form-label"%>
            <div class="col-10">
            <%= form.text_area :description , rows: 2 ,class: "form-control"%>
          </div>
        </div>
  
    <div class="actions" >
      <%= form.submit class: "btn btn-outline-success" %>
      <%= link_to 'Back to articles', articles_path  , class: "btn btn-outline-primary "%> 

    </div>
  </div>
  <% end %>
  </div>
</div>