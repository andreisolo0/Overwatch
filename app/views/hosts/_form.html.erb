<div class="container-sm " >
    <%= render 'shared/errors', obj: @host %>
      <div class = "row justify-content-center ">
        <div class="col-sm-4 row-20 form_container">
          <%= form_with(model: @host) do |form| %>
            <div class="form-group  row-20 ">
                <strong><%= form.label :hostname , class: "col-2 col-form-label"%></strong>
                <div class="col-20">
                  <%= form.text_field :hostname , class: "form-control form-control-sm", placeholder: "Your hostname"%>
                </div>
            </div>
            
            <div class="form-group row-20">
              
              <strong><%= form.label "IP/FQDN" , class: "col-2 col-form-label text-uppercase"%></strong>
                <div class="col-20">
                <%= form.text_field :ip_address_or_fqdn ,class: "form-control form-control-sm", placeholder: "IP or FQDN of host"%>
              </div>
            </div>

            <div class="form-group row-20">
            <strong><%= form.label "Username" , class: "col-2 col-form-label"%></strong>
                <div class="col-20">
                <%= form.text_field :user_to_connect ,class: "form-control form-control-sm" , placeholder: "Username to connect to host"%>
                </div>
            </div>

            <div class="form-group row-20">
            <strong><%= form.label "Password" , class: "col-2 col-form-label"%></strong>
                <div class="col-20">
                <%= form.password_field :password ,class: "form-control form-control-sm" , placeholder: "Password to connect to host"%>
                </div>
            </div>
            
            <div style = "position:relative; left:20px; bottom:5px">
              <%= form.check_box :run_as_sudo, class: "form-check-input" %>
              <strong><%= form.label "Run as sudo?" , class: "form-check-label" %></strong>
            </div>

            <br>

            <div class="form-group row-20">
              <strong><%= form.label "Port" , class: "col-2 col-form-label"%></strong>
              
                <div class="col-20">
                <%= form.text_field :ssh_port ,class: "form-control form-control-sm" , placeholder: "SSH port to connect to host"%>
                </div>
            </div>
      


        <div class="actions text-center" >
          <%= form.submit(@host.new_record? ? "Add new" : "Update", class: "btn btn-success") %>
    
        </div>
      </div>
      <% end %>
      </div>
    </div>