<div class="container" >

    <%= render 'shared/errors', obj: @host %>
      <div class = "row justify-content-center">
        <div class="col-10">
          <%= form_with(model: @host) do |form| %>
            <div class="form-group row">
                <%= form.label :hostname , class: "col-2 col-form-label"%>
                <div class="col-10">
                  <%= form.text_field :hostname , class: "form-control"%>
                </div>
            </div>
            
            <div class="form-group row">
              
                <%= form.label :ip_address_or_fqdn , class: "col-2 col-form-label"%>
                <div class="col-10">
                <%= form.text_field :ip_address_or_fqdn ,class: "form-control"%>
              </div>
            </div>
      
        <div class="actions text-center" >
          <%= form.submit(@host.new_record? ? "Add new" : "Update", class: "btn btn-success") %>
    
        </div>
      </div>
      <% end %>
      </div>
    </div>