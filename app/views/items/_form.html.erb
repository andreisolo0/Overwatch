<div class="container-sm " >
    <%= render 'shared/errors', obj: @item %>
      <div class = "row justify-content-center ">
        <div class="col-sm-4 row-20 form_container">
          <%= form_with(model: @item) do |form| %>
            <div class="form-group  row-20 ">
                <strong><%= form.label :item_name , class: "col-20 col-form-label"%></strong>
                <div class="col-20">
                  <%= form.text_field :item_name , class: "form-control form-control-sm", placeholder: "Item name"%>
                </div>
            </div>
            
            <div class="form-group row-20">
              <strong><%= form.label "Command to read" , class: "col-20 col-form-label text-inline"%></strong>
                <div class="col-20">
                <%= form.text_area :command_to_read ,class: "form-control form-control-sm rounded-10 code-bg", placeholder: "Write command to get the value"%>

              </div>
            </div>

            <div class="form-group row-20">
              <strong><%= form.label "Description" , class: "col-20 col-form-label text-inline"%></strong>
                <div class="col-20">
                <%= form.text_field :description ,class: "form-control form-control-sm number", placeholder: "Description of item"%>

              </div>
            </div>

            <div class="form-group row-20">
            <strong><%= form.label "Interval to read(minutes)" , class: "col-20 col-form-label"%></strong>
                <div class="col-20">
                <%= form.text_field :interval_to_read ,class: "form-control form-control-sm" , placeholder: "Interval to read value",  type: "number", min: "0", value:"0"%>
                </div>
            </div>
      


        <div class="actions text-center" >
          <%= form.submit(@item.new_record? ? "Add new" : "Update", class: "btn btn-success") %>
    
        </div>
      </div>
      <% end %>
      </div>
    </div>